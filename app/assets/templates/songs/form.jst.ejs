<div class="title">
  <h1><%= title %></h1>
</div>

<form class="song-form">
  <label for="title">Title</label>
  <input type="text" name="song[title]" id="title" value="<%= song.escape('title') %>">

  <label for="description">Description</label>
  <textarea name="song[description]" id="description"><%= song.escape('description') %></textarea>


  <label for="url">URL</label>
  <input type="text" name="song[url]" value="<%= song.escape('url') %>">

  <label for="tag-labels">Tags</label>
  <input type="text" name="tag_string" value="">

  <!-- <input type="submit" value="Save Song"> -->
  <button>Save Song</button>
</form>
