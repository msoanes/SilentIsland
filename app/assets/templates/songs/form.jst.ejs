<div class="title">
  <h1><%= title %></h1>
  <span class="destroy glyphicon glyphicon-trash"></span>
</div>

<form class="song-form">
  <label for="title">Title</label>
  <input type="text" name="song[title]" id="title" value="<%= song.escape('title') %>">

  <label for="description">Description</label>
  <textarea name="song[description]" id="description"><%= song.escape('description') %></textarea>

  <button class="song-upload">Upload File</button>

  <label for="tag-labels">Tags</label>
  <input type="hidden" name="tag_string" id="tag-labels" value="<%= song.commaSepTags() %>">

  <button>Save Song</button>
</form>
