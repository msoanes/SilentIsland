<form class="" action="<%= action %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <input
    type="text"
    name="user[username]"
    value="<%= user.username %>"
    placeholder="username">

  <input
    type="password"
    name="user[password]"
    placeholder="password">

  <input type="submit" value="<%= submit_text %>">
</form>
